generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Invoice {
  id                      String   @id @default(cuid())
  invoiceId               String
  status                  String
  failureReason           String
  errCode                 String
  amount_in_kopiyka       Int
  ccy_TypeOfMoneyCurrency Int
  finalAmount_in_kopiyka  Int
  invoiceDateOfCreation   DateTime
  invoiceDateOfUpdate     DateTime
  otherPaymentInfo        String?
}
